@page
@model AbbyWeb.Pages.Categories.Create

<form method="POST">
    <div class="border p3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Category / Create</h2>
            <hr>
        </div>
        <div class="mb-3">
            <label asp-for="Category.Name">Name:</label>
            <input asp-for="Category.Name" class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="Category.Name">Display Order:</label>
            <input asp-for="Category.DisplayOrder" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary" style="width: 150px">Create</button>
        </div>
</form>
