@page
@using AbbyWeb.Model
@model AbbyWeb.Pages.Categories.Index

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6">
            <a asp-page="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create</a>
        </div>
    </div>
</div>
<br>
<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>Category Name</th>
        <th>Display Order</th>
    </tr>
    </thead>
    <tbody>
    @foreach (Category category in Model.Categories)
    {
        <tr>
            <td width="50%">@category.Name</td>
            <td width="30%">@category.DisplayOrder</td>
        </tr>
    }
    </tbody>
</table>