@page
@using AbbyWeb.Model
@model AbbyWeb.Pages.Categories.Index

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category / List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> &nbsp; Create</a>
        </div>
    </div>
</div>
<br>
<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>Category / Name</th>
        <th>Display order</th>
        <th class="text-center">#Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (Category category in Model.Categories)
    {
        <tr>
            <td width="50%">@category.Name</td>
            <td width="30%">@category.DisplayOrder</td>
            <td class="d-flex justify-content-center">
                <div class="w-75 btn-group" role="group">
                    <a asp-page="Edit" asp-route-id="@category.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i></a>
                    <a asp-page="Delete" asp-route-id="@category.Id" class="btn btn-danger mx-2"><i class="bi bi-trash2-fill"></i></a>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>